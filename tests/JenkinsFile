pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                // Check out your code from the repository
                checkout scm
            }
        }
        stage('Run Performance Tests') {
            steps {
                // Run k6 tests
                 echo 'Installing k6'
                sh 'sudo chmod +x setup_k6.sh'
                sh 'sudo ./setup_k6.sh'
                echo 'Running K6 performance tests...'
                sh 'k6 run loadtest.js'
            }
        }
    }
}
