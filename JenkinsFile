pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Run Performance Tests') {
            steps {
                 echo 'Installing k6'
                sh 'sudo chmod +x setup_k6.sh'
                sh 'sudo ./setup_k6.sh'
                echo 'Running K6 performance tests...'
                sh 'k6 run loadtest.js'
            }
        }
        stage('Preparation') {
              steps {
            cleanWs()
    ̦̦̦̦}}
    }
}
