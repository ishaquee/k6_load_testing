pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: 'main']], doGenerateSubmoduleConfigurations: false, extensions: [], userRemoteConfigs: [[url: 'https://github.com/ishaquee/k6_load_testing.git']]])
            }
        }
       stage('Run Performance Tests') {
    steps {
        echo 'Installing k6'
        sh 'chmod +x ./setup_k6.sh' // Remove 'sudo' from this line
        echo 'Running K6 performance tests...'
        sh '/usr/local/bin/k6 run loadtest.js' // Specify the full path to k6
        sh 'k6 report result.json --out report.html'    // Generate HTML report from JSON

    } }
    stage('Publish HTML Report') {
    steps {
        publishHTML(target: [
            allowMissing: false,
            alwaysLinkToLastBuild: true,
            keepAll: true,
            reportDir: '.',
            reportFiles: 'report.html',
            reportName: 'K6 Load Test Report',
        ])
    }
}
    }
     post {
    always {
        archiveArtifacts artifacts: 'report.html', allowEmptyArchive: true
    }
}
}
